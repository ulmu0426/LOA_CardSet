<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCardSetBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtCardSetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:text="카드세트 이름"
        android:textSize="18dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txtCardSetAwake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:text="카드수집 각성합 : 00각성"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/llTableFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardSetName">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>
                <ImageView
                    android:id="@+id/imgCardSet0"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet5"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
                <ImageView
                    android:id="@+id/imgCardSet6"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/card_legend_aman"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/txtCardbook_Cardname0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <View
        android:id="@+id/cardSetBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llTableFrame"/>


</androidx.constraintlayout.widget.ConstraintLayout>