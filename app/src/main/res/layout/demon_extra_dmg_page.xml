<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#404040"
        android:orientation="vertical">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/abc_vector_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnCardSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="카드 세트"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnCardBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="카드 도감 특성"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnDemonExtraDmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="악마 추가 피해"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/idTopMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#AE000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtDemonExtraDmg_DemonExtraPage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/imgBtnMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                app:srcCompat="@drawable/fix01menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="악마 추가 피해"
                android:textColor="#E3E3E3"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtDemonExtraDmg_DemonExtraPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTopMenu"
            app:layout_constraintBottom_toTopOf="@+id/lineDemon"
            android:text="악마 추가 피해 + 0.00%"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginVertical="20dp"/>
        <View
            android:id="@+id/lineDemon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDemonExtraDmg_DemonExtraPage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <ScrollView
            android:id="@+id/scrollViewCardDetailPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lineDemon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrollViewInCardbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFE188">
                //해당 리니어 레이아웃에 도감 목록 넣을 예정
                <LinearLayout
                    android:id="@+id/linearlayoutCardBookList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical">

                    //예시
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtCardBookName001"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="카드 도감 이름"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:id="@+id/txtCardBookStat001"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="특성 + 0"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="5dp"
                            android:stretchColumns="*">
                            <TableRow>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="5dp"
                                    app:srcCompat="@drawable/aman" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="60dp"
                                    app:srcCompat="@drawable/aman" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="카드이름"
                                    android:textAlignment="center"
                                    android:textSize="10dp" />

                            </TableRow>

                        </TableLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="카드 00장 수집
                            \n각성 단계 합계 00 : 악마 추가 피해 + 0.00%
                            \n각성 단계 합계 00 : 악마 추가 피해 + 0.00%
                            \n각성 단계 합계 00 : 악마 추가 피해 + 0.00%"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/black"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E7D4FF"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완성 도감 숨기기"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/checkboxCompleteDemonExtraEmgInvisibility"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:buttonTint="#676767"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>