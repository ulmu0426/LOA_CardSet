<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/idTopMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#AE000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tablelayoutCardSet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/imgBtnMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                app:srcCompat="@drawable/fix01menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="카드 세트"
                android:gravity="center"
                android:textColor="#E3E3E3"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/tablelayoutCardSet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:stretchColumns="0,1,2"
            app:layout_constraintTop_toBottomOf="@+id/idTopMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#D8D3E1FF">

            <TableRow >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
            </TableRow>
            <TableRow >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
            </TableRow>
            <TableRow >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/aman" />
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00각성"/>
            </TableRow>
        </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#404040"
        android:orientation="vertical">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/abc_vector_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnCardSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="카드 세트"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnCardBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="카드 도감 특성"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtMenuBtnDemonExtraDmg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="악마 추가 피해"
            android:textColor="#E8E8E8"
            android:textSize="25dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>