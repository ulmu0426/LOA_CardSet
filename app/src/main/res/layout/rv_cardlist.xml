<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/llImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            app:srcCompat="@drawable/card_uncommon_lubenstain_del_arco" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtName"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/llImg"
        android:background="@null"
        android:gravity="center"
        android:text="루벤스타인 델 아르코"
        android:textSize="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changeAwakeHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/txtCheck"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAwakeAndHave"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:text="각성 : 0  보유 : 0"
            android:textSize="15dp"
            android:paddingHorizontal="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtCheck"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toStartOf="@+id/isGetCheckbox"
        android:background="@null"
        android:gravity="center"
        android:text="획득 "
        android:textAlignment="center"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/isGetCheckbox"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:buttonTint="#43A047"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llImg"
        android:layout_marginTop="5dp"
        android:background="@color/black" />
</RelativeLayout>