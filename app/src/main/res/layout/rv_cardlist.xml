<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvCardList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgJustCard"
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCardName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_uncommon_lubenstain_del_arco" />

    <TextView
        android:id="@+id/txtCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="루벤 스타인 델 아르코"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtCardAwakeAndHave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgJustCard" />

    <TextView
        android:id="@+id/txtCardAwakeAndHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="각성 : 00 \n보유 : 00"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardName" />

</androidx.constraintlayout.widget.ConstraintLayout>