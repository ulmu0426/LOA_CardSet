                    android:id="@+id/txtCardbook_Cardname5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/txtCardbook_Cardname7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="카드이름"
                    android:textAlignment="center"
                    android:textSize="10dp" />
