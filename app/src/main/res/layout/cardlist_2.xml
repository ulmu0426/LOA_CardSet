<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtCardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99424242"
        android:text="카드 리스트"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/svCardAdapter"/>

    <ScrollView
        android:id="@+id/svCardAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardList"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/cardLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="전설 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvLegendList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLegendList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#4DFDD835"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/cardEpic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardLegend"
                tools:listitem="@layout/rv_cardlist2" />

            <TextView
                android:id="@+id/cardEpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="영웅 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvEpicList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvLegendList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEpicList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#265E35B1"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/cardRare"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardEpic"
                tools:listitem="@layout/rv_cardlist2" />

            <TextView
                android:id="@+id/cardRare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="희귀 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvRareList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvEpicList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRareList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#331E88E5"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/cardUncommon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardRare"
                tools:listitem="@layout/rv_cardlist2" />

            <TextView
                android:id="@+id/cardUncommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="고급 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvUncommonList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvRareList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUncommonList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#4D83FF00"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/cardCommon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardUncommon"
                tools:listitem="@layout/rv_cardlist2" />

            <TextView
                android:id="@+id/cardCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="일반 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvCommonList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvUncommonList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommonList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#33BFBFBF"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/cardSpecial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardCommon"
                tools:listitem="@layout/rv_cardlist2" />

            <TextView
                android:id="@+id/cardSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="스페셜 카드"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/rvSpecialList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvCommonList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSpecialList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#33FDB2FF"
                android:orientation="vertical"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardSpecial"
                tools:listitem="@layout/rv_cardlist2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</LinearLayout>