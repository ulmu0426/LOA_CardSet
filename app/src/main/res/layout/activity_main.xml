<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBEAEAEA"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

            //로고 및 설정이 들어갈 레이아웃

            <LinearLayout
                android:id="@+id/lLayout_logo_set"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="#BA000000"
                android:gravity="top"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#E2000000" />

            //카드세트 레이아웃
            <LinearLayout
                android:id="@+id/lLayout_CardSet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#CACACA"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/txtBtnCardSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="카드 세트"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgCardSet1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="#000000"
                        app:srcCompat="@android:mipmap/sym_def_app_icon" />

                    <ImageView
                        android:id="@+id/imgCardSet2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#000000"
                        app:srcCompat="@android:mipmap/sym_def_app_icon" />

                    <ImageView
                        android:id="@+id/imgCardSet3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="#000000"
                        app:srcCompat="@android:mipmap/sym_def_app_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCardSet1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="00각성"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtCardSet2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="00각성"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtCardSet3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:text="00각성"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#E2000000" />

            //카드 도감 레이아웃

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#B0FFE0B7"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/txtBtnCardBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="카드 도감 특성 합"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="15dp"
                    android:stretchColumns="0,1,2">

                    <TableRow android:background="#BA000000">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="치명"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="특화"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="신속"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </TableRow>

                    <TableRow android:background="#BA000000">

                        <TextView
                            android:id="@+id/txtCritical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="00"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/txtSpeciality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="00"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/txtAgility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:background="@color/white"
                            android:text="00"
                            android:textAlignment="center"
                            android:textSize="20dp" />
                    </TableRow>


                </TableLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#E2000000"/>

            //악마 추가 피해 레이아웃

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFEBEB"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/txtBtnDemonExtraDmg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="악마 추가 피해"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDemonExtraDmg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="0.00%"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>